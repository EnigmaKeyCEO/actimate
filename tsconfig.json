{
  "compilerOptions": {
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "#/*": ["src/*"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": ["src", "index.d.ts"],
  "extensions": [
    ".ts",
    ".tsx",
    ".js",
    ".jsx",
    ".json",
    ".web.ts",
    ".web.tsx",
    ".web.js",
    ".web.jsx",
    ".native.ts",
    ".native.tsx",
    ".native.js",
    ".native.jsx",
    ".android.ts",
    ".android.tsx",
    ".android.js",
    ".android.jsx",
    ".ios.ts",
    ".ios.tsx",
    ".ios.js",
    ".ios.jsx"
  ],
  "extends": "expo/tsconfig.base"
}
